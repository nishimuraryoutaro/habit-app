<div class="d-flex align-items-center gap-3 mb-3">
    <span class="avatar"><%= @user.email.first.upcase %></span>
    <div>
      <div class="h4 mb-1 fw-bold"><%= @user.email %></div>
    </div>
  </div>
   <div class="card shadow-sm">
    <div class="card-header bg-white">目標（期間）を編集</div>
    <div class="card-body">
      <%= form_with model: @goal, url: profile_path(@user), method: :put do |f| %>
        <div class="mb-2">
          <%= f.label :title, "タイトル", class:"form-label" %>
          <%= f.text_field :title, class:"form-control", placeholder:"最終目標タイトル" %>
        </div>

        <div class="row g-2">
          <div class="col">
            <%= f.label :start_date, "開始日", class:"form-label" %>
            <%= f.date_field :start_date, id:"startDateInput", class:"form-control" %>
          </div>
          <div class="col">
            <%= f.label :target_date, "目的日（自動で開始日+3ヶ月）", class:"form-label" %>
            <%= f.date_field :target_date,class:"form-control",value: (@goal.target_date || @target_preview) %>
          </div>
        </div>

        <div class="mb-3 mt-2">
          <%= f.label :description, "説明（任意）", class:"form-label" %>
          <%= f.text_area :description, rows:3, class:"form-control" %>
        </div>

        <div class="d-flex gap-2">
          <%= f.submit "保存", class:"btn btn-primary" %>
          <% if @goal.persisted? %>
            <%= link_to "Goal詳細へ", goal_path(@goal), class:"btn btn-outline-secondary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>