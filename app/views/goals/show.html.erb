<p style="color: green"><%= notice %></p>
<h5 class="mb-0">Goal詳細</h5>
  <button class="btn btn-primary"">
      <i class="bi bi-plus-lg me-1"></i> 日々のTODOを作成
  </button>
  <% content_for :title, "Goals" %>
  <h1>Goals</h1>
<div class="row g-3 mb-3">
    <div class="col-12 col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-white">3ヶ月後の目標</div>
        <div class="card-body">
          <h5 class="mb-2"><%= @goal.title %></h5>
          <div class="progress"><div class="progress-bar bg-success" style="width:<%#= @quarter_progress %>%"><%#= @quarter_progress %>%</div>@quarter_progress</div>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-white">1ヶ月後の目標</div>
        <div class="card-body">
          <h5 class="mb-2"><%#= @month_goal&.title || "—" %>@month_goal&.title || "—" </h5>
          <div class="progress"><div class="progress-bar bg-secondary" style="width:50%">50%</div></div>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-white">今週の目標</div>
        <div class="card-body">
          <h5 class="mb-2"><%#= @week_goal&.title || "—" %>@week_goal&.title || "—" </h5>
          <div class="progress"><div class="progress-bar bg-primary" style="width:40%">40%</div></div>
        </div>
      </div>
    </div>
  </div>
<div class="row g-3">
<div class="col-12 col-xl-8">
  <div class="row g-3">
      <div class="col-12 col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-header bg-white fw-bold">年、月</div>
          <div class="card-body">
            <div class="calendar-grid">
              <% ["月","火","水","木","金","土","日"].each do |w| %>
                <div class="calendar-cell calendar-head"><%= w %></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
  <div class="col-12 col-xl-4">
      <div class="card shadow-sm mb-3">
        <div class="card-header bg-white">選択日の進捗</div>
        <div class="card-body">
          <div class="text-muted xsmall">日付: <span id="gdSelectedDateLabel">@selected_date</span></div>
          <div class="progress my-2"><div id="gdDayProg" class="progress-bar bg-info" style="width:@day_progress%"> @day_progress</div></div>
          <div class="text-muted xsmall">（その日につくったTODOの完了率）</div>
        </div>
      </div>
      <div class="card shadow-sm">
        <div class="card-header bg-white">3ヶ月 合計進捗</div>
        <div class="card-body">
          <div class="progress"><div id="gdQuarterProg" class="progress-bar bg-success" style="width:<%#= @quarter_progress %>%">@quarter_progress%</div></div>
          <div class="text-muted xsmall mt-2">（3ヶ月内に作成したTODOの完了率）</div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to "New goal", new_goal_path %>