<!-- app/views/home/index.html.erb -->
<div class="container py-4">
  <!-- Hero / 最終目標 & 今週 -->
  <div class="row g-4">
    <div class="col-md-6">
      <div class="card card-hover">
        <div class="card-body">
          <h6 class="text-muted mb-1">最終目標 (3ヶ月後)</h6>
          <% if @focused_goal %>
            <div class="h5 fw-semibold"><%= @focused_goal.title %></div>
            <div class="d-flex justify-content-between align-items-center mb-1">
              <small class="text-muted">締切: <%= @focused_goal.target_date %></small>
              <small class="fw-semibold"><%= @focused_goal.progress %>%</small>
            </div>
            <div class="progress progress-xs">
              <div class="progress-bar bg-success" style="width:<%= @focused_goal.progress %>%"></div>
            </div>
          <% else %>
            <p class="mb-2 text-muted">まだGoalがありません。</p>
            <%= link_to "Goalを作成", new_goal_path, class: "btn btn-sm btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card card-hover">
        <div class="card-body">
          <h6 class="text-muted mb-1">今週の目標</h6>
        </div>
      </div>
    </div>
  </div>

  <!-- 今日のタスク / チェックで取り消し線 -->
  <div class="row g-4 mt-1">
    <div class="col-lg-8">
      <div class="card card-hover h-100">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span class="section-title">今日のタスク</span>
        <div class="card-footer">
          <p>今日のタスク追加</p>
          <p>一覧へ</p>
        </div>
      </div>
    </div>

    <!-- 右側：連続日数 & ざっくりのカレンダー（ダミー） -->
    <div class="col-lg-4">
      <div class="card mb-4 card-hover">
        <div class="card-body">
          <p class="mt-2 mb-0 text-muted">毎日のチェックインを継続中！継続こそ力🔥</p>
        </div>
      </div>

      <div class="card card-hover">
        <div class="card-header fw-semibold">カレンダー（達成日は●）</div>
        <div class="card-body">
          <div class="row row-cols-7 g-1">
            <% (1..30).each do |d| %>
              <% done = [1,3,5,7,10,12,14,17,18,20,21,24,25,27].include?(d) %>
              <div class="col">
                <div class="border text-center rounded py-2 <%= done ? 'bg-success-subtle border-success text-success' : 'text-muted' %>">
                  <%= d %> <%= done ? "●" : "" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
