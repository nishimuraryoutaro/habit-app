<!-- app/views/home/index.html.erb -->
<div class="container py-4">
  <!-- Hero / 最終目標 & 今週 -->
  <div class="row g-4">
    <div class="col-md-6">
      <div class="card card-hover">
        <div class="card-body">
          <h6 class="text-muted mb-1">最終目標 (3ヶ月後)</h6>
          <% if @goal %>
            <div class="h5 fw-semibold"><%= @goal.title %></div>
            <div class="d-flex justify-content-between align-items-center mb-1">
              <small class="text-muted">締切: <%= @goal.target_date %></small>
              <small class="fw-semibold"><%= @goal.progress %>%</small>
            </div>
            <div class="progress progress-xs">
              <div class="progress-bar bg-success" style="width:<%= @goal.progress %>%"></div>
            </div>
          <% else %>
            <p class="mb-2 text-muted">まだGoalがありません。</p>
            <%= link_to "Goalを作成", new_goal_path, class: "btn btn-sm btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card card-hover">
        <div class="card-body">
          <h6 class="text-muted mb-1">今週の目標</h6>
        </div>
      </div>
    </div>
  </div>

  <!-- 今日のタスク / チェックで取り消し線 -->
  <div class="row g-4 mt-1">
    <div class="card-body p-0">
      <ul class="list-group list-group-flush">
        <% Array(@todos_today).each do |t| %>
          <%= render partial: "daily_tasks/row", locals: { task: t } %>
        <% end %>
        <% if Array(@todos_today).blank? %>
          <li class="list-group-item text-muted small">
            この日に設定されたタスクはまだありません。
          </li>
        <% end %>
      </ul>
    </div>
    <div class="card-footer bg-white d-flex justify-content-between">
      <div class="text-muted small">🔥 継続こそ力</div>
      <%# 「いいね＝今日を達成」：3件を完了+Checkin作成 %>
      <%= button_to "いいね（今日を達成）",goal_path(@goal, date: @selected_date),method: :post,class:"btn btn-link text-decoration-none p-0" %>
    </div>
  </div>
  <ul class="list-group list-group-flush">
    <% @todos_today.each do |t| %>
      <%= render "daily_tasks/row_editable", task: t %>
    <% end %>
  </ul>
</div>
  <div class="card card-hover">
    <div class="card-header fw-semibold">カレンダー（達成日は●）</div>
    <div class="card-body">
      <div class="row row-cols-7 g-1">
        <% (1..30).each do |d| %>
          <% done = [1,3,5,7,10,12,14,17,18,20,21,24,25,27].include?(d) %>
          <div class="col">
            <div class="border text-center rounded py-2 <%= done ? 'bg-success-subtle border-success text-success' : 'text-muted' %>">
              <%= d %> <%= done ? "●" : "" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

    </div>
  </div>
</div>