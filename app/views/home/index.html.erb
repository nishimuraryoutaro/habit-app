<!-- app/views/home/index.html.erb -->
<div class="container py-4">
  <!-- Hero / 最終目標 & 今週 -->
  <div class="row g-3 mb-3">
    <div class="col-12 col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-white">最終目標 (3ヶ月後)</div>
        <div class="card-body">
          <h5 class="mb-2"><%= @final_goal&.title || "—" %></h5>
           <div class="progress"><div class="progress-bar bg-success" style="width:50%"></div></div>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-white">1ヶ月後の目標</div>
        <div class="card-body">
          <h5>weekly_goal</h5>
          <div class="progress"><div class="progress-bar bg-secondary" style="width:50%">50%</div></div>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-white">今週の目標</div>
        <div class="card-body">
          <h5>weekly_goal</h5>
          <div class="progress"><div class="progress-bar bg-primary" style="width:40%">40%</div></div>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4 mt-1">
    <div class="col-lg-8">
      <div class="card-header bg-white d-flex align-items-center justify-content-between">
        <h6 class="mb-0">今日のタスク（<%= l(@selected_date) %>）</h6>
        <% todos = @todos_today || [] %>
        <small class="text-muted">
          <%= @done_count %>/<%= @total_count %> 完了
        </small>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card mb-4 card-hover">
        <div class="card-body">
          <p class="mt-2 mb-0 text-muted">毎日のチェックインを継続中！継続こそ力🔥</p>
        </div>
      </div>

      <div class="card card-hover">
        <div class="card-header fw-semibold">カレンダー（達成日は●）</div>
        <div class="card-body">
          <div class="row row-cols-7 g-1">
            <% (1..30).each do |d| %>
              <% done = [1,3,5,7,10,12,14,17,18,20,21,24,25,27].include?(d) %>
              <div class="col">
                <div class="border text-center rounded py-2 <%= done ? 'bg-success-subtle border-success text-success' : 'text-muted' %>">
                  <%= d %> <%= done ? "●" : "" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
